{
  "manifest_version": 2,
  "name": "TranslateFox",
  "version": "1.0",
  "description": "Auto-translate web page",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"]
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html"
  }
}
